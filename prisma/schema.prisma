generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Expense {
 id                Int     @id @default(autoincrement())
 date              DateTime @default(now())
 expense_item_id   Int
 money             Int
 note              String?
}

model Category {
 id                Int     @id @default(autoincrement())
 name              String
}

model ExpenseItem {
  id                Int     @id @default(autoincrement())
  category_id       Int
  name              String
  is_deleted        Boolean
}

model　Budget {
  id                Int     @id @default(autoincrement())
  year              Int
  month             Int
  expense_item_id   Int
  money             Int
}

model　BudgetDefault {
  id                Int     @id @default(autoincrement())
  expense_item_id   Int
  money             Int
}
